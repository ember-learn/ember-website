<div class="release-timeline" ...attributes>
  <div class="release">
    <img src="/images/releases/small_release.png" alt={{@project.lastStableVersion}}>
    <div class="mt-1 bold">{{@project.initialVersion}}</div>
    <div class="text-sm">Released {{format-date-time @project.date "MMM Do"}}</div>
  </div>
  <div class="path-to-release">
    <div class="bold">The path to {{@project.finalVersion}}...</div>
    <div class="steps">
      {{project-listing/beta
          version=1
          project=@project
      }}
      {{project-listing/beta
          version=2
          project=@project
      }}
      {{project-listing/beta
          version=3
          project=@project
      }}
      {{project-listing/beta
          version=4
          project=@project
      }}
      {{project-listing/beta
          version=5
          project=@project
      }}
      {{project-listing/beta
          version=6
          project=@project
      }}
    </div>
  </div>
  <div class="release future-image">
    <img src="/images/releases/small_release.png" alt={{@project.finalVersion}}>
    <div class="mt-1 bold">{{@project.finalVersion}}</div>
    <div class="text-sm">Coming the week of {{format-date-time @project.cycleEstimatedFinishDate "MMM Do"}}</div>
  </div>
</div>