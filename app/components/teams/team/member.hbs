<div
  class="text-center"
  data-test-member={{@member.name}}
>
  <ResponsiveImage
    @src="/images/team/{{@member.image}}"
    @width={{100}}
    alt=""
    class="team-image"
    role="presentation"
  />

  <div data-test-field="Name">
    {{@member.name}}
  </div>

  <div class="social-links">
    {{#if @member.github}}
      <a
        aria-label="{{@member.name}} Github Profile"
        class="icon"
        data-test-link="GitHub"
        href={{@member.github}}
        rel="noopener noreferrer"
        target="_blank"
      >
        {{~! ~}}{{svg-jar "github"}}{{~! ~}}
      </a>
    {{/if}}

    {{#if @member.twitter}}
      <a
        aria-label="{{@member.name}} Twitter"
        class="icon"
        data-test-link="Twitter"
        href={{@member.twitter}}
        rel="noopener noreferrer"
        target="_blank"
      >
        {{~! ~}}{{svg-jar "twitter"}}{{~! ~}}
      </a>
    {{/if}}

    {{#if @member.mastodon}}
      <a
        aria-label="{{@member.name}} Mastodon"
        class="icon"
        data-test-link="Mastodon"
        href={{@member.mastodon}}
        rel="noopener noreferrer"
        target="_blank"
      >
        {{~! ~}}{{svg-jar "mastodon"}}{{~! ~}}
      </a>
    {{/if}}

    {{#if @member.bluesky}}
      <a
        aria-label="{{@member.name}} Bluesky"
        class="icon"
        data-test-link="Bluesky"
        href={{@member.bluesky}}
        rel="noopener noreferrer"
        target="_blank"
      >
        {{~! ~}}{{svg-jar "bluesky"}}{{~! ~}}
      </a>
    {{/if}}
  </div>
</div>
