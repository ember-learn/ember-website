<div class={{unless this.isCompleted "future-image"}}>
  <img src="/images/releases/tiny_beta.png" alt="beta {{@version}}" class="mt-3" loading="lazy">
  <div class="text-sm bold mt-1">beta {{@version}}</div>
  {{#if this.isCurrentBeta}}
    <div class="text-sm">(current beta)</div>
  {{/if}}
  {{#if this.isNextBeta}}
    <div class="text-sm">({{format-date-time @project.nextDate}})</div>
  {{/if}}
</div>